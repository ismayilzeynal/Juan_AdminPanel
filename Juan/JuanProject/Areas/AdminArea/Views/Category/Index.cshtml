@model List<CategoryVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <a asp-action="create" asp-controller="category" class="btn btn-success">Create Category</a>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <a asp-action="detail" asp-controller="category" asp-route-name="@item.Name" class="btn btn-success">Detail</a>
                                            <a asp-action="edit" asp-controller="category" asp-route-name="@item.Name" class="btn btn-primary">Edit</a>
                                            <a asp-action="delete" asp-controller="category" asp-route-name="@item.Name" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
